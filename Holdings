import React, { useState } from "react";
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";

const subsidiariesData = [
  {
    name: "GreenTech Energy",
    description: "Focused on renewable energy solutions and sustainable infrastructure development.",
  },
  {
    name: "UrbanEats",
    description: "A growing network of urban restaurants and cloud kitchens innovating local cuisine.",
  },
  {
    name: "AutoShine Car Care",
    description: "Automotive care and detailing centers with eco-friendly practices and high-end services.",
  },
  {
    name: "SmartBuild Developments",
    description: "Real estate and construction company focused on smart housing and green buildings.",
  },
];

export default function VersatileHoldingsApp() {
  const [subsidiaries, setSubsidiaries] = useState(subsidiariesData);
  const [search, setSearch] = useState("");

  const filteredSubsidiaries = subsidiaries.filter((sub) =>
    sub.name.toLowerCase().includes(search.toLowerCase())
  );

  return (
    <div className="min-h-screen bg-gray-100 text-gray-800">
      <header className="bg-black text-white py-6 text-center">
        <h1 className="text-3xl font-bold">Versatile Holdings</h1>
        <p className="text-sm mt-2">Leveraging Synergies. Synchronizing Growth.</p>
      </header>

      <nav className="bg-gray-800 text-white flex justify-center space-x-6 py-3">
        <a href="#about" className="hover:underline">About Us</a>
        <a href="#subsidiaries" className="hover:underline">Subsidiaries</a>
        <a href="#contact" className="hover:underline">Contact</a>
      </nav>

      <section id="about" className="px-4 py-8 max-w-4xl mx-auto">
        <h2 className="text-2xl font-semibold mb-4">About Us</h2>
        <p>
          Versatile Holdings is a dynamic and forward-thinking holding company committed to fostering
          innovation and diversification across multiple industries. Our mission is to create value by
          acquiring and managing a diverse range of subsidiaries, each offering unique products and
          services.
        </p>
      </section>

      <section id="subsidiaries" className="px-4 py-8 max-w-5xl mx-auto">
        <div className="flex justify-between items-center mb-4">
          <h2 className="text-2xl font-semibold">Our Subsidiaries</h2>
          <Input
            placeholder="Search subsidiaries..."
            className="w-60"
            value={search}
            onChange={(e) => setSearch(e.target.value)}
          />
        </div>
        <div className="grid gap-6 md:grid-cols-2">
          {filteredSubsidiaries.map((sub, index) => (
            <Card key={index} className="shadow-md">
              <CardContent className="p-4">
                <h3 className="text-xl font-bold mb-2">{sub.name}</h3>
                <p>{sub.description}</p>
              </CardContent>
            </Card>
          ))}
        </div>
      </section>

      <section id="contact" className="px-4 py-8 max-w-4xl mx-auto">
        <h2 className="text-2xl font-semibold mb-4">Contact Us</h2>
        <form className="space-y-4">
          <Input type="text" placeholder="Your Name" required />
          <Input type="email" placeholder="Your Email" required />
          <Input type="text" placeholder="Message" required />
          <Button type="submit">Send Message</Button>
        </form>
      </section>

      <footer className="bg-black text-white text-center py-4 mt-10">
        &copy; 2025 Versatile Holdings Company. All rights reserved.
      </footer>
    </div>
  );
}
